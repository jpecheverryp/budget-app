package component

import "github.com/jpecheverryp/budget-app/service"

templ Sidebar(accounts []service.Account) {
	<aside>
		<hgroup>
			<h3>Accounts:</h3>
		</hgroup>
		<ul id="accounts-list">
			for _, account := range accounts {
				@AccountItem(account)
			}
			<li><a href="/dashboard/new-account">Add Account</a></li>
		</ul>
	</aside>
}
