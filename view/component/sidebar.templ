package component

import "github.com/jpecheverryp/budget-app/service"

templ Sidebar(accounts []service.Account) {
	<aside>
		<hgroup>
			<h3>Accounts:</h3>
			<h4><a href="/dashboard/new-account">Add Account</a></h4>
		</hgroup>
		<ul>
			for _, account := range accounts {
				@AccountItem(account)
			}
		</ul>
	</aside>
}
